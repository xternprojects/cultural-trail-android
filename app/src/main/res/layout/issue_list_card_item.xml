<?xml version="1.0" encoding="utf-8"?>

<com.xtern.cultural_trail.cards.IssueListCardItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/issue_list_card_item"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MainCardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/issue_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/header"/>
            <TextView
                android:layout_marginTop="210dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#AA000000"
                android:padding="12dip"
                android:text="SomeText"
                android:id="@+id/issue_name_text_view"
                android:textColor="#ffffffff" />
            <TextView
                android:layout_below="@+id/issue_image"
                android:id="@+id/issue_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="There is an issue here"
                android:textSize="30sp"/>
            <View
                android:layout_below="@+id/issue_text"
                android:id="@+id/cardDivider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_white"
                android:layout_marginLeft="@dimen/big_padding"
                android:layout_marginRight="@dimen/big_padding"
                android:visibility="visible"/>
            <RelativeLayout
                android:layout_below="@+id/cardDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/location_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS LOCATION"
                    android:textSize="15sp"
                    android:layout_marginRight="98dp"
                    android:layout_marginEnd="98dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/map_marker_black"
                    android:layout_marginLeft="344dp"
                    android:layout_marginStart="344dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</com.xtern.cultural_trail.cards.IssueListCardItemView>
