<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.xtern.cultural_trail.fragments.CreateIssueFragment">

    <TextView
        android:id="@+id/issue_name_tv"
        android:text="Issue Name:"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/issue_name_et"
        android:layout_below="@+id/issue_name_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/issue_description_tv"
        android:text="Issue Description:"
        android:layout_below="@id/issue_name_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/issue_description_et"
        android:layout_below="@id/issue_description_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/priority_option_tv"
        android:text="Priority:"
        android:layout_below="@id/issue_description_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/priority_tv"
        android:text="Low Priority"
        android:layout_below="@id/priority_option_tv"
        android:textSize="22dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:clickable="true"/>

    <RadioGroup
        android:id="@+id/priority_option_rg"
        android:layout_below="@id/priority_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/high_priority_rb"
            android:text="High Priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/low_priority_rb"
            android:text="Low Priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <TextView
        android:id="@+id/reported_by_tv"
        android:text="Reported By"
        android:layout_below="@id/priority_option_rg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/reported_by_et"
        android:layout_below="@id/reported_by_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Issue"
        android:id="@+id/create_issue_button"
        android:layout_below="@+id/reported_by_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Pictue"
        android:id="@+id/take_picture_button"
        android:layout_below="@+id/reported_by_et"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/create_issue_button"
        android:background="@color/cultural_trail_light_green"/>


</RelativeLayout>
